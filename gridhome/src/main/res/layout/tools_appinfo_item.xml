<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item"
    android:minHeight="@dimen/app_list_item_height">

    <ImageView
        android:id="@+id/list_item_image_icon"
        style="@style/list_item_imageview"
        android:layout_width="@dimen/app_image_width"
        android:layout_height="@dimen/app_image_height"
        android:layout_marginStart="@dimen/app_image_marginStart"
        android:layout_marginEnd="@dimen/app_image_marginEnd" />

    <TextView
        android:id="@+id/list_item_name_icon"
        style="@style/list_item_textview"
        android:layout_toEndOf="@+id/list_item_image_icon" />

</RelativeLayout>
