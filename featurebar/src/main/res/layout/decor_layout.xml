<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/feature_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_feature_bar_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black">

        <TextView
            android:id="@+id/feature_bar_options"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="none"
            android:gravity="center"
            android:paddingStart="16dp"
            android:singleLine="true"
            android:text="@string/default_feature_bar_options"
            android:textColor="@android:color/white"
            android:textSize="@dimen/feature_bar_size"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/feature_bar_center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="none"
            android:gravity="center"
            android:maxWidth="74px"
            android:singleLine="true"
            android:text="@string/default_feature_bar_center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/feature_bar_size"
            android:visibility="@integer/feature_bar_center_visible"
            tools:ignore="PxUsage,SpUsage" />

        <TextView
            android:id="@+id/feature_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="none"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/default_feature_bar_back"
            android:textColor="@android:color/white"
            android:textSize="@dimen/feature_bar_size"
            tools:ignore="SpUsage"
            android:paddingEnd="16dp"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/feature_bar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
