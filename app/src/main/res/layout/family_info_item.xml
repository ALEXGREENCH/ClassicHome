<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/family_info_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/family_item_add_top_padding"
            android:src="@drawable/family_item_add"
            android:visibility="visible" />

        <TextView
            android:id="@+id/empty_family_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="@dimen/family_item_name_bottom_padding"
            android:singleLine="true"
            android:textSize="@dimen/empty_family_item_text_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/family_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="@dimen/family_item_text_size"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/family_divider_height"
        android:layout_marginStart="@dimen/family_divider_padding"
        android:layout_marginEnd="@dimen/family_divider_padding"
        android:layout_weight="1"
        android:background="@drawable/family_divider_selector"
        android:gravity="bottom" />
</LinearLayout>
