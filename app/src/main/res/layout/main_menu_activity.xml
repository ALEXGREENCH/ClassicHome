<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_menu_title_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/main_menu_title_margin_bottom"
        android:focusable="false"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

    <com.sprd.common.view.LoopGridView
        android:id="@+id/all_apps_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gridview_height"
        android:listSelector="@drawable/main_menu_selector"
        android:numColumns="@integer/main_menu_column_num"
        android:scrollbars="none" />
</LinearLayout>